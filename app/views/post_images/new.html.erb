<h1>POST</h1>
<%= form_with model: @post_image, local:true do |f| %>
  <h4>Wardrobe</h4>
  <%= f.collection_select :wardrobe_id, @wardrobes, :id, :title %>
  <h4>Image</h4>
  <%= f.attachment_field :image %>
  <h4>Item</h4>
  <%= f.text_field :item_name %>
  <h4>Introdaction</h4>
  <%= f.text_area :caption %>
  <h2></h2>
  <%= f.submit 'DONE' %>
<% end %>