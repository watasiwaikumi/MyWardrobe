<div align="center">
<% @post_images.each do |post_image| %>
    <div class="flex_test-box">
      <div class="item-list">
        <div class="item">
          <div class="item-image">
            <div class="item-text">
              <%= link_to post_image_path(post_image.id) do %>
                <%= attachment_image_tag post_image, :image %>
              <% end %>
              <p>Wardrobe：<%= post_image.item_name %></p>
              <p>Introdaction：<%= post_image.caption %></p>
              <p>Tags : 
               <% post_image.tags.each do |tag| %>
               <%= tag.name %>,
               <% end %>
              </p>
              
              <td><%= link_to 'Show', post_image_path(post_image), class: "post_image#{post_image.id}" %></td>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
<br></br>
<br></br>
<%= paginate @post_images %>

<%@tag_list.each do |list| %>
     <p><%=link_to list.name,post_images_path(tag_id:list.id)%><%= list.post_images.count %></p>
<% end %>
</div>
