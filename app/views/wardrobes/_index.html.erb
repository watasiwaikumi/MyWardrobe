
<%= form_with model: wardrobe,local:true do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control wardrobe_title' %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control wardrobe_body' %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>

<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% wardrobes.each do |wardrobe| %>
      <tr>
      <td><%= link_to user_path(wardrobe.user) do %>
      <%= attachment_image_tag(wardrobe.user, :profile_image, :fill, 50, 50) %>
      <% end %>
     </td>
      <td><%= link_to wardrobe.title, wardrobe_path(wardrobe), class: "wardrobe_#{wardrobe.id}" %></td>
        <td><%= wardrobe.body %></td>
        <td class="favorite-btn"><%= render "favorites/favorite-btn", wardrobe: wardrobe %></td>
      </tr>
    <% end %>
  </tbody>
</table>