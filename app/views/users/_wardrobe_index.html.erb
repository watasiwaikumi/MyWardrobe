<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% wardrobes.each do |wardrobe| %>
      <tr id="wardrobe_<%= wardrobe.id %>">
        <td><%= link_to user_path(wardrobe.user) do %>
          <%= attachment_image_tag(wardrobe.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </td>
        <td><%= link_to wardrobe.title, wardrobe_path(wardrobe), class: "wardrobe_#{wardrobe.id}" %></td>
        <td><%= wardrobe.body %></td>
        <td class="favorite-btn"><%= render "favorites/favorite-btn", wardrobe: wardrobe %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with url: user_search_path(@user), method: :get do |f| %>
  <%= f.date_field :created_at %>
  <%= f.submit '検索', class: 'btn btn-primary'  %>
<% end %>

<div id="search_result">
  <% if @search_book.present? %>
    <%= render 'search', search_wardrobe: @search_wardrobe %>
  <% end %>
</div>