<% if wardrobe.favorited_by?(current_user) %>
  <%= link_to wardrobe_favorites_path(wardrobe), method: :delete, remote: true do %>
    <i class="far fa-heart favorite-btn-unlike"></i>
  <% end %>
<% else %>
  <%= link_to wardrobe_favorites_path(wardrobe), method: :post, remote: true do %>
    <i class="fas fa-heart favorite-btn" style =color:red ></i>
  <% end %>
<% end %>